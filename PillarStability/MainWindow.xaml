<Window x:Class="PillarStability.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PillarStability"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        
        Title="Pillar Stability Analyser" 
        Height="768" 
        Width="1366" 
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Tools.WPF;component/Controls/TabControlExt/Themes/aero.normalcolor.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="syncfusion:TabItemExt">
                <Setter Property="FontSize" Value="25" />
                <Setter Property="FontWeight" Value="Light" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Background" Value="#f0f0f0" />
                <Setter Property="Width" Value="60" />
                <Setter Property="CloseButtonState" Value="Visible" />
                <Setter Property="Height" Value="250" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="HeaderMargin" Value="10 0 0 50" />
                <Setter Property="Control.HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Control.VerticalContentAlignment" Value="Stretch" />
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <ContentPresenter Content="{TemplateBinding Content}">
                                <ContentPresenter.LayoutTransform>
                                    <RotateTransform Angle="-90" />
                                </ContentPresenter.LayoutTransform>
                            </ContentPresenter>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type syncfusion:TabItemExt}">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" x:Name="Bd" ToolTip="{Binding Path=ItemToolTip, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabItemExt}},FallbackValue=''}" >
                                <DockPanel x:Name="PART_DockPanel" LastChildFill="True" Margin="2" >
                                    <Button 
                                        Name="PART_CloseButton" 
                                        Width="15" Height="14" 
                                        VerticalAlignment="Top"                                
                                        DockPanel.Dock="Top" 
                                        Focusable="False" 
                                        Visibility="Collapsed"
							            Tag="TabItemCancelButton" 
                                        Style="{StaticResource TabScrollingButton}"
                                        Command="syncfusion:TabControlCommands.CloseTabItem" />
                                    <ToggleButton 
                                        Name="PART_PinButton" 
                                        Visibility="{Binding ShowPin, RelativeSource={RelativeSource AncestorType={x:Type syncfusion:TabItemExt}}, Converter={StaticResource CloseButtonTypeToVisibilityConverter}}" 
                                        DockPanel.Dock="Right" 
                                        Width="15" 
                                        Height="14"
                                        Command="syncfusion:TabControlCommands.PinTabItem" 
                                        CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}" 
                                        Foreground="{StaticResource Aero.ButtonInactivePathBrush}"  
                                        VerticalAlignment="Top" 
                                        Margin="1,0,3,0"                 
                                        Template="{StaticResource PinButtonTemplate}"  />
                                    <Image x:Name="PART_Image"
					                    Source="{TemplateBinding syncfusion:TabControlExt.Image}"
					                    Height="{TemplateBinding syncfusion:TabControlExt.ImageHeight}"
					                    Width="{TemplateBinding syncfusion:TabControlExt.ImageWidth}"
					                    Stretch="Fill" Margin="{TemplateBinding IconMargin}"
					                    SnapsToDevicePixels="True" VerticalAlignment="Center"
                                        DockPanel.Dock="{Binding Path=(syncfusion:TabControlExt.ImageAlignment), Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ImageAlignmentToDockConverter}}"/>
                                    <ContentPresenter    ContentSource="Header" x:Name="Content" Margin="{TemplateBinding HeaderMargin}" TextElement.Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabItemExt}},FallbackValue=Transparent}" 
                                          RecognizesAccessKey="False" Content="{TemplateBinding HeaderedContentControl.Header}" 
                                          ContentTemplate="{TemplateBinding HeaderedContentControl.HeaderTemplate}"                                           
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                          SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />

                                    <ContentPresenter    ContentSource="Header" x:Name="PART_EditHeader" Visibility="Collapsed"
                                          Margin="{TemplateBinding HeaderMargin}" TextElement.Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabItemExt}},FallbackValue=Transparent}" 
                                          RecognizesAccessKey="True" Content="{TemplateBinding HeaderedContentControl.Header}" 
                                          ContentTemplate="{Binding EditHeaderTemplate, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:TabControlExt}}}"                                           
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                          SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                                </DockPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="{Binding Path=TabItemSelectedBackground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabControlExt}}, FallbackValue=Transparent}" />
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{Binding Path=TabItemSelectedBorderBrush, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabControlExt}}, FallbackValue=Transparent}" />
                                    <Setter TargetName="Content" Property="TextElement.Foreground" Value="{Binding Path=TabItemSelectedForeground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabControlExt}}, FallbackValue=Transparent}" />
                                    <Setter TargetName="Content" Property="TextElement.FontWeight" Value="{Binding Path=SelectedItemFontWeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:TabControlExt}}, FallbackValue=SemiBold}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=(syncfusion:TabControlExt.IsEditing), RelativeSource={RelativeSource Self}}" Value="True">
                                    <Setter Property="Visibility" TargetName="PART_EditHeader" Value="Visible"/>
                                    <Setter Property="Visibility" TargetName="Content" Value="Collapsed"/>
                                    <Setter Property="LayoutTransform" TargetName="PART_EditHeader">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>

    </Window.Resources>

    <Grid>
        <Grid Background="#f0f0f0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <syncfusion:MenuAdv
                Grid.ColumnSpan="2"
                Background="#f06e3e"
                VerticalAlignment="Stretch"
                FontWeight="Bold"
                >
                <syncfusion:MenuItemAdv
                    Header="File"
                    Margin="20 0 0 0"
                    Foreground="White"
                    VerticalAlignment="Center">
                    <syncfusion:MenuItemAdv Header="New" FontWeight="Light" Click="NewProject_Click"/>
                    <syncfusion:MenuItemAdv Header="Open" FontWeight="Light" Click="OpenFromCSV_Click"/>
                    <syncfusion:MenuItemAdv Header="Save as" FontWeight="Light" Click="SaveAs_Click"/>
                    <syncfusion:MenuItemAdv Header="Save" FontWeight="Light" Click="Save_Click"/>

                </syncfusion:MenuItemAdv>
                <syncfusion:MenuItemAdv
                    Header="Export"
                    Foreground="White"
                    VerticalAlignment="Center">
                    <syncfusion:MenuItemAdv Header="Export as PDF" FontWeight="Light" Click="ExportAsPDF_Click"/>
                    <syncfusion:MenuItemAdv Header="Export as Image" FontWeight="Light" Click="ExportAsImage_Click"/>
                </syncfusion:MenuItemAdv>

            </syncfusion:MenuAdv>


            <syncfusion:TabControlExt
                Grid.ColumnSpan="2"
                Grid.Row="1"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="#e8e8e8"
                BorderThickness="0"
                x:Name="TabControleMain"
                OnCloseButtonClick="TabControlExt_OnCloseButtonClick"
                OnCloseAllTabs="TabControlExt_OnCloseAllTabs"
                OnCloseOtherTabs="TabControlExt_OnCloseOtherTabs"
                CloseMode="Delete"
                EnableLabelEdit="True"
                AfterLabelEdit="TabControleMain_AfterLabelEdit"
                CloseButtonType="Individual"

                SelectedIndex="0"
                SelectedItemFontWeight="Medium"
                ShowTabListContextMenu="False"
                TabItemSelectedBackground="#f06e3e"
                TabItemSelectedForeground="White"
                TabPanelBackground="#f0f0f0"
                TabScrollButtonVisibility="Hidden"
                TabStripPlacement="Left" 
                SelectionChanged="TabControleMain_SelectionChanged">

            </syncfusion:TabControlExt>

            <syncfusion:ButtonAdv 
                Margin="5"
                MaxHeight="44"
                Grid.Column="0"
                Grid.Row="1"
                FontSize="22"
                Background="#f06e3e"
                Foreground="White"
                Label="Add Pillar"
                IconHeight="20"
                IconWidth="30"
                SmallIcon="icons/add.png"
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Stretch" 
                Click="AddPillar_Click"/>
        </Grid>
    </Grid>
</Window>
