<Project Sdk="Microsoft.NET.Sdk">

      <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>Icons\ohms_logo_oBF_icon.ico</ApplicationIcon>
        <Platforms>AnyCPU;x64;x86</Platforms>
		  <RuntimeIdentifier Condition=" '$(OS)' == 'Windows_NT' ">win-x86</RuntimeIdentifier>
		  <SelfContained>true</SelfContained>
      </PropertyGroup>

      <ItemGroup>
        <None Remove="Icons\calculator.png" />
        <None Remove="Icons\Calculator_white.png" />
        <None Remove="Icons\ohms_logo_oBF_icon.ico" />
        <None Remove="OHMS Toolbox 1.0.lw.xml" />
        <None Remove="Services\OHMS Toolbox 1.0.lw.xml" />
      </ItemGroup>

      <ItemGroup>
        <PackageReference Include="QLM.QlmLicenseLibNetCore" Version="15.0.21315.2" />
        <PackageReference Include="Syncfusion.UI.WPF.NET" Version="19.3.0.48" />
      </ItemGroup>

	<ItemGroup>
	  <Resource Include="Icons\calculator.png" />
	  <Resource Include="Icons\Calculator_white.png">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </Resource>
	  <Content Include="Icons\ohms_logo_oBF_icon.ico">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="OHMS Toolbox 1.0.lw.xml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	  <Content Include="Services\OHMS Toolbox 1.0.lw.xml">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Caveability\Caveability.csproj" />
	</ItemGroup>

</Project>
