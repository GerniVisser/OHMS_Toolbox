<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Icons\ohms_logo_oBF_icon.ico</ApplicationIcon>
    <Platforms>AnyCPU;x64;x86</Platforms>
	<RuntimeIdentifier Condition=" '$(OS)' == 'Windows_NT' ">win-x86</RuntimeIdentifier>
	<SelfContained>true</SelfContained>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Icons\OHMS logo.png" />
    <None Remove="Icons\ohms_logo_oBF_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Syncfusion.Licensing" Version="19.3.0.48" />
    <PackageReference Include="Syncfusion.Pdf.Wpf" Version="19.3.0.48" />
    <PackageReference Include="Syncfusion.PropertyGrid.WPF" Version="19.3.0.48" />
    <PackageReference Include="Syncfusion.SfChart.WPF" Version="19.3.0.48" />
    <PackageReference Include="Syncfusion.Shared.WPF" Version="19.3.0.48" />
    <PackageReference Include="Syncfusion.Tools.WPF" Version="19.3.0.48" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icons\OHMS logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Icons\ohms_logo_oBF_icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharedWpfLibrary\_SharedWpfLibrary.csproj" />
  </ItemGroup>

</Project>
